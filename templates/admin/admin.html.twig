    <div class="admin-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Quantit√©</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.price }}</td>
                    <td>{{ article.quantity }}</td>
                    <td>
                        <div class="admin-button">
                            <a href="{{ path('admin.show', { id: article.id }) }}">Voir</a>
                            <a href="{{ path('admin.update', { id: article.id }) }}">Modifier</a>
                            <form action="{{ path('admin.delete', { id: article.id }) }}" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="admin-delete">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin.new') }}"><div class="admin-push"><p>Ajouter</p></div></a>
    </div>
{% endblock %}