{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        a{
            position: relative;
            top: -20px;
            left: calc(85vw - 140px);
            text-decoration: none;
            color: black;
        }
        .form-admin{
            margin-top: 50px;
            position: relative;
            margin-left: 20%;
            height: 80%;
            width: 80%;
        }
        .form-admin label{
            margin-top: 15px;
            display: block;
        }
        .form-admin input{
            margin-top: 5px;
            border: 1px solid lightgrey;
            border-radius: 3px;
            height: 30px;
            width: 80%;
        }
        .admin-button{
            margin-top: 15px;
            border: transparent;
            height: 30px;
            width: 100px;
            color: white;
            background-color: rgb(9, 104, 17);
        }
    </style>
{% endblock %}

{% block body %}
    <form action="{{ path('home.login') }}" method="post" class="form-admin">
        <div class="">
            <label>Username</label>
            <input type="text" name="username">
        </div>
        <div class="">
            <label>password</label>
            <input type="text" name="password">
        </div>
        <button type="submit" class="admin-button">Se connecter</button>
    </form>
    <a href="{{ path('home.subscribe') }}">Pas encore inscrit ?</a>
{% endblock %}